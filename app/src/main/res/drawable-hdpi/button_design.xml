<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#2B3D53" />
            <stroke
                android:width="1dp"
                android:color="#2B3D53" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#009A9A"
                android:endColor="#009A9A"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#009A9A" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>